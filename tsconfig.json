{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false, // Esto también muestra errores en archivos .js si no usas TS
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2017",
    // Lo de arriba es opcional si estás en JS
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/actions/redemptionCredits.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ]
}
